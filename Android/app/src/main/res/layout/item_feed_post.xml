<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <include layout="@layout/includable_feed_item_top" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/feed_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <include layout="@layout/includable_feed_item_bottom" />

    <TextView
        android:id="@+id/feed_item_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="21 likes" />

    <TextView
        android:id="@+id/feed_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        tools:text="@string/dummy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginStart="12dp"
        android:text="@string/view_all_comments"
        android:textColor="@color/colorGray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/feed_item_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:textColor="@color/colorGray"
        android:textSize="12sp"
        tools:text="1 hour ago" />

</LinearLayout>